<p id="notice"><%= notice %></p>

<h1>Torrents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @torrents.each do |torrent| %>
      <tr>
        <td><%= torrent.name %></td>
        <td><%= link_to 'Show', torrent %></td>
        <td><%= link_to 'DL', torrent_path(torrent, torrent_pass: current_user.torrent_pass, format: 'torrent') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Torrent', new_torrent_path %>
